#!/usr/bin/zsh

PAGER=${PAGER:-less}
#if [ -n "$verbose" -a "$verbose" = "1" ]; then
#	entries=$(man -k --names-only --regex $1 | grep $* --color=never)
#else
#	entries=$(man -k --names-only --regex $1 | grep $* --color=never \
#		| cut -d ' ' -f -2 | grep $*)
#fi
#entries=$(whatis --regex $1 | \
#	while read line; do
#		if cut -d ' ' -f -1 <<< $line | grep $* >&/dev/null; then
#			if [ "${verbose:-0}" = 1 ]; then
#				echo $line
#			else
#				cut -d ' ' -f -2 <<<$line
#			fi
#		fi
#	done)

entries=$(whatis --regex $*)
[ ${verbose:-0} = 0 ] && \
	entries=$(cut -d ' ' -f -1 <<<$entries)

[ -z "$entries" ] && return
#column <<<$entries
#j=$k
j=$(wc -l <<< $entries)
range="1..$j, -$j..-1"
quit="<enter>, 0"
#cat -n <<< $entries | sed 's/[ \t]\{1,\}/ /g' | column
awk '/./{printf "%3d. %s\n", NR, $0}' <<<$entries | \
	columnate $((${verbose:-0}?3:4))
	#wrap-to | column

while { echo "Select a page ($range) or quit ($quit)" && read i }; do
	[ -z "$i" ] || [[ "$i" =~ "[Qq]" ]] || \
		[[ "$i" =~ "[Qq][Uu][Ii][Tt]" ]] && break
	[[ "$i" =~ "-[0-9]{1,}" ]] && let i="$j+$i+1"
	if [[ "$i" =~ "[0-9]{1,}" ]]; then
		if [ "$i" -ge 1 -a "$i" -le "$j" ]; then
			line=$(head -n $i <<<$entries | tail -n 1 | cut -d ' ' -f1)
			man -P $PAGER $line
		elif [ "$i" = 0 ]; then
			break
		else
			echo -n "$i is out of range. "
		fi
	fi
done
