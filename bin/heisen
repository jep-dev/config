#!/usr/bin/zsh

pdate(){
	# For now, just print as-is
	date +%T
	# Extract (HH MM SS) from single time check
	# cur=(${(s/:/)$(date +%T)})
}

d0=$(pdate)
while true; do
	clear
	lpos=$((($COLUMNS-${#d0})/2))
	#
	d1=$(pdate)
	tput cup 0 $lpos
	echo -n "$d0 "
	tput cup 1 $lpos
	echo -n "$d1 "
	sleep 1
done

# pdate; sleep 1; pdate
